generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Country {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  name          String
  flag          String
  description   String
  gold_medals   String
  silver_medals String
  bronze_medals String
  status        Boolean
  created_at    DateTime? @default(now())
  updated_at    DateTime? @default(now())

  @@map("countries")
}

model Stadium {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  img         String
  description String
  capacity    String
  status      Boolean
  created_at  DateTime? @default(now())
  updated_at  DateTime? @default(now())

  @@map("stadium")
}
